<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera.ar" android:required="true" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ElementaryApp"
        tools:targetApi="31">
        <meta-data android:name="com.google.ar.core" android:value="optional" />

        <activity
            android:name=".content.VrSceenActivity"
            android:exported="false"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".register.RegisterActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".content.MathQuizScreenActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".content.IdentifyScreenActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".content.LessonsScreenActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".content.MenuMainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".register.SignInActivity"
            android:exported="true"
            android:screenOrientation="portrait">

             <intent-filter>
             <action android:name="android.intent.action.MAIN" />


             <category android:name="android.intent.category.LAUNCHER" />
             </intent-filter>
        </activity>
        <activity
            android:name=".content.DrawScreenActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
    </application>

</manifest>